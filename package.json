{
  "name": "touchspin-vue-workspace",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/vue",
    "packages/example-vanilla"
  ],
  "scripts": {
    "dev": "yarn workspace touchspin-vue-examples dev",
    "build": "yarn workspaces foreach -At run build",
    "test": "yarn workspaces foreach -At run test",
    "changeset": "changeset",
    "version-packages": "changeset version && yarn install --mode=update-lockfile",
    "release": "changeset publish",
    "prepare": "node scripts/setup-husky.mjs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "9.1.7",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.10.3"
}
